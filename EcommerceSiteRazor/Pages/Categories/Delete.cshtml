@page
@model EcommerceSiteRazor.Pages.Categories.DeleteModel

<form method="post">
    <input asp-for="Category.Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary p-0">Delete Category</h2>
            <hr />

            <div class="mb-3 row p-1">
                <label asp-for="Category.Name" class="p-0"></label>
                <input type="text" disabled class="form-control" asp-for="Category.Name" />
            </div>

            <div class="mb-3 row p-1">
                <label asp-for="Category.DisplayOrder" class="p-0"></label>
                <input type="text" disabled class="form-control" asp-for="Category.DisplayOrder" />
            </div>

            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control" style="width:150px">Delete </button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-page="/categories/index"  class="btn btn-outline-secondary border form-control" style="width:150px"> Back To List</a>
                </div>
            </div>


        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}           